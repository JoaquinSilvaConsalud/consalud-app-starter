.{{kebabCase name}} {
  min-height: 100vh;
  background: var(--consalud-white);
  padding: var(--consalud-spacing-xl);
}

.{{kebabCase name}}__container {
  max-width: 1400px;
  margin: 0 auto;
}

.{{kebabCase name}}__title {
  font-size: var(--consalud-font-size-3xl);
  font-weight: var(--consalud-font-weight-bold);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-lg);
}

.{{kebabCase name}}__content {
  padding: var(--consalud-spacing-xl);
}

.{{kebabCase name}}__table-wrapper {
  overflow-x: auto;
}

.{{kebabCase name}}__table {
  width: 100%;
  border-collapse: collapse;
}

.{{kebabCase name}}__table thead {
  background-color: var(--consalud-gray-light);
}

.{{kebabCase name}}__table th {
  padding: var(--consalud-spacing-md);
  text-align: left;
  font-weight: var(--consalud-font-weight-semibold);
  color: var(--consalud-black);
  border-bottom: 2px solid var(--consalud-gray-medium);
}

.{{kebabCase name}}__table td {
  padding: var(--consalud-spacing-md);
  border-bottom: 1px solid var(--consalud-gray-light);
  color: var(--consalud-black);
}

.{{kebabCase name}}__table tbody tr:hover {
  background-color: var(--consalud-gray-light);
}

.{{kebabCase name}}__action-btn {
  margin-right: var(--consalud-spacing-xs);
}

