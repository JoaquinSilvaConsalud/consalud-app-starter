.{{kebabCase name}} {
  min-height: 100vh;
  background: var(--consalud-white);
  padding: var(--consalud-spacing-xl);
}

.{{kebabCase name}}__container {
  max-width: 900px;
  margin: 0 auto;
}

.{{kebabCase name}}__document {
  padding: var(--consalud-spacing-2xl);
}

.{{kebabCase name}}__header {
  border-bottom: 2px solid var(--consalud-gray-medium);
  padding-bottom: var(--consalud-spacing-lg);
  margin-bottom: var(--consalud-spacing-xl);
}

.{{kebabCase name}}__title {
  font-size: var(--consalud-font-size-4xl);
  font-weight: var(--consalud-font-weight-bold);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-md);
}

.{{kebabCase name}}__meta {
  display: flex;
  gap: var(--consalud-spacing-md);
  font-size: var(--consalud-font-size-sm);
  color: var(--consalud-gray-dark);
}

.{{kebabCase name}}__content {
  line-height: var(--consalud-line-height-relaxed);
}

.{{kebabCase name}}__section {
  margin-bottom: var(--consalud-spacing-xl);
}

.{{kebabCase name}}__section-title {
  font-size: var(--consalud-font-size-2xl);
  font-weight: var(--consalud-font-weight-bold);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-md);
  margin-top: var(--consalud-spacing-lg);
}

.{{kebabCase name}}__section-title:first-child {
  margin-top: 0;
}

.{{kebabCase name}}__paragraph {
  font-size: var(--consalud-font-size-base);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-md);
  text-align: justify;
}

.{{kebabCase name}}__list {
  margin-left: var(--consalud-spacing-lg);
  margin-bottom: var(--consalud-spacing-md);
  color: var(--consalud-black);
}

.{{kebabCase name}}__list li {
  margin-bottom: var(--consalud-spacing-xs);
}

