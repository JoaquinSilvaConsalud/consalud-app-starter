.{{kebabCase name}} {
  padding: var(--consalud-spacing-base);
  border: var(--consalud-border-width) solid var(--consalud-border);
  border-radius: var(--consalud-border-radius);
  background: var(--consalud-white);
}

.{{kebabCase name}}__title {
  font-size: var(--consalud-font-size-lg);
  font-weight: var(--consalud-font-weight-semibold);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-sm);
}
