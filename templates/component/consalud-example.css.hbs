.{{kebabCase name}} {
  padding: var(--consalud-spacing-lg);
  border-radius: var(--consalud-border-radius-lg);
  background: var(--consalud-white);
  box-shadow: var(--consalud-shadow);
}

.{{kebabCase name}}__content {
  padding: var(--consalud-spacing-lg);
}

.{{kebabCase name}}__title {
  font-size: var(--consalud-font-size-xl);
  font-weight: var(--consalud-font-weight-semibold);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-md);
}

.{{kebabCase name}}__description {
  font-size: var(--consalud-font-size-base);
  color: var(--consalud-black);
  margin-bottom: var(--consalud-spacing-lg);
  line-height: var(--consalud-line-height-normal);
}

.{{kebabCase name}}__form {
  display: flex;
  flex-direction: column;
  gap: var(--consalud-spacing-lg);
}
